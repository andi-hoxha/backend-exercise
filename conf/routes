# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

POST    /api/users                  controllers.UserController.saveUsers(request:Request)

POST    /api/authenticate           controllers.AuthenticationController.authenticate(request:Request)

# Testing routes
GET     /api/dashboard/:id/content              controllers.TestController.getId(request:Request,id:String)

GET     /api/dashboard              controllers.TestController.getAll(request:Request)
POST    /api/dashboard             controllers.TestController.create(request:Request)
PUT     /api/dashboard/:id          controllers.TestController.update(request:Request,id:String)
DELETE  /api/dashboard/:id          controllers.TestController.delete(request:Request,id:String)
